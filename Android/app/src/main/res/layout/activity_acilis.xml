<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan"
    tools:context="com.example.emku.project_summary.acilis">
    <ImageView
        android:id="@+id/img_acilis"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cu"/>
    <TextView
        android:id="@+id/txt_ozet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cü Özetleme Sistemi"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:layout_below="@id/img_acilis"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_ozet"
        android:indeterminateTint="#FFFFFF" />

</RelativeLayout>
