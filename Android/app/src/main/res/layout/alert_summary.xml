<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#598984">
    <TextView
        android:id="@+id/txt_summary_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:text=""
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/txt_summary_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:text="Ã–ZET"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txt_summary_time"/>
    <EditText
        android:id="@+id/txt_summary_content"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:textColor="@android:color/white"
        android:textSize="10dp"
        android:gravity="top|left"
        android:background="@android:color/transparent"
        android:layout_below="@id/txt_summary_head"
        android:layout_margin="15dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_summary_content">
        <ImageView
            android:id="@+id/alert_img_phone"
            android:layout_margin="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/mobile" />
        <ImageView
            android:id="@+id/alert_img_mail"
            android:layout_margin="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/e_mail" />
        <ImageView
            android:id="@+id/alert_img_onedrive"
            android:layout_margin="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/onedrive" />
        <ImageView
            android:id="@+id/alert_img_gdrive"
            android:layout_margin="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/google_drive" />


    </LinearLayout>



</RelativeLayout>